<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/progressView"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mssageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_20dp"/>

    <Button
        android:id="@+id/retryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mssageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_20dp"
        android:text="@string/retryText"
        android:padding="@dimen/_10dp"
        android:textColor="@color/appExtreme"
        android:textStyle="bold"
        android:background="@drawable/bg_primary_button"/>

    <TextView
        android:id="@+id/mssageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generic_error_message"
        android:textSize="@dimen/font_normal"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>